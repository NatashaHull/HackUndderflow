<h5 class="question-title">
  <strong><%= @question.title %></strong>
</h5>
<div class="question">
  <div class="arrows">
    <%= link_to "<div class=\"arrow-up\"></div>".html_safe,
               question_upvote_url(@question), :method => :post %>
    <span class="votes"><%= @question.vote_counts %></span>
    <%= link_to "<div class=\"arrow-down\"></div>".html_safe,
               question_downvote_url(@question), :method => :post %>
  </div>
  <pre class="question-body"><%= @question.body %></pre>
  <a href="<%= edit_question_url(@question) %>" class="question-link">
    improve this question
  </a>|
  <a href="<%= new_question_comment_url(@question) %>"
     class="question-link">comment</a>
  <div class="comments">
    <% @question.comments.each do |comment| %>
      <pre class="comment-body"
          ><%= comment.body %> - <%= comment.user.username %></pre>
    <% end %>
  </div>
</div>