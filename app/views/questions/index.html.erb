<h1 class="centered-header">Questions</h1>

<ul class="questions-list">
  <% @questions.each do |question| %>
    <% if (question.title.length > 50) %>
      <% show_title = "#{question.title.slice(0..50)}..." %>
    <% else %>
      <% show_title = question.title %>
    <% end %>
    
    <li class="questionLi">
      <div class="question-info">
        <% votes = pluralize(question.vote_counts, "vote") %>
        <% answers = pluralize(question.answers.count, "answer") %>
        <span class="question-votes">
          <strong class="question-num"><%= votes.split(" ")[0] %></strong>
          <%= votes.split(" ")[1] %>
        </span>
        <span class="question-answers">
          <strong class="question-num"><%= answers.split(" ")[0] %></strong>
          <%= answers.split(" ")[1] %>
        </span>
      </div>
      <span class="question">
        <%= link_to show_title, question %>
        <span class="question-body">
          <%= "#{question.body.slice(0..75)}..." %>
        </span>
      </span>
    </li>
  <% end %>
</ul>

<div class="question-pagination">
  <%= paginate @questions %>
</div>

