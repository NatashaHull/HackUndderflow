<h1 class="centered-header">Users</h1>

<ul class="users-list">
  <% @users.each do |user| %>
    <li class="userLi">
      <div class="user-info">
        <%= image_tag(user.gravatar_url,
              alt: user.username,
              class: "gravatar"
            ) %>
        <pre 
          class="user"><%= link_to "#{user.username}\n",
              user %><%= user.points %>
        </pre>
      </div>
    </li>
  <% end %>
</ul>

