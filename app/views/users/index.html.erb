<h1 class="centered-header">Users</h1>

<ul class="users-list">
  <% @users.each do |user| %>
    <li class="userLi">
      <div class="user-info">
        <%= image_tag(user.gravatar_url,
              alt: user.username,
              class: "gravatar"
            ) %>
        <span class="user">
          <%= link_to user.username, user %>
          <%= user.points %>
        </span>
      </div>
    </li>
  <% end %>
</ul>

<div class="user-pagination">
  <%#= paginate @users %>
</div>

